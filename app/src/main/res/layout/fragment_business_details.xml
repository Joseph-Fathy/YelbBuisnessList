<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.jo.trudoctask.details.presentation.view_model.BusinessDetailsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".details.presentation.view.BusinessDetailsFragment">

        <ProgressBar
            android:id="@+id/pbLoadingBusinessesDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="@{viewModel.viewStateLiveData.Loading?View.VISIBLE:View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.viewStateLiveData.data.toString()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/emptyView"
            layout="@layout/business_empty_view"
            android:visibility="@{viewModel.viewStateLiveData.Empty?View.VISIBLE:View.GONE}"
            tools:visibility="gone" />

        <include
            android:id="@+id/errorView"
            layout="@layout/business_error_view"
            android:visibility="@{viewModel.viewStateLiveData.Error!=null ?View.VISIBLE:View.GONE}"
            app:message="@{viewModel.viewStateLiveData.error.message}"
            tools:visibility="gone" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>